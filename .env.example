# C2 Controller Configuration
# Copy this file to .env and customize values

# Security Settings
API_KEY=your-secure-api-key-here-32-chars-min
SECRET_KEY=your-flask-secret-key-here
REQUIRE_AUTH=True

# Network Settings
HOST=127.0.0.1
PORT=8080
REVERSE_SHELL_PORT=9999

# Agent Management
AGENT_TIMEOUT_SECONDS=60
CLEANUP_INTERVAL_SECONDS=30
MAX_AGENTS=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_COMMAND_LENGTH=1000
MAX_UPLOAD_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/controller.log

# Production Settings
DEBUG=False